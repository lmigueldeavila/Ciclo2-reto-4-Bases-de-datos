drop table if exists cancion;

create table cancion(
  can_id int,
  can_resenia char(255),
  cant_anio int,
  can_cantante int,
  foreign key (can_id) references servicio(ser_id),
  foreign key (can_cantante) references servicio(cant_id)
);

